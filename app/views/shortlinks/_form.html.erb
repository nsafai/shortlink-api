<%= form_with model: @shortlink, local: true do |form| %>

  <% if @shortlink.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@shortlink.errors.count, "error") %>
        prohibited this article from being saved:
      </h2>
      <ul>
        <% @shortlink.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :short_URL %><br>
    link.me/<%= form.text_field :short_url, placeholder: "custom_url" %>
  </div>

  <div class="form-group">
    <%= form.label :original_URL %><br>
    <%= form.text_field :long_url, placeholder: "http://www.example.com/orig-url/23"  %>
  </div>

  <p>
    <%= form.submit 'Save', :class => 'button center' %>
  </p>
<% end %>
