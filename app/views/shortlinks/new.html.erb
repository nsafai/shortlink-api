<div class="authform">
  <h3>New Shortlink</h3>

<%= form_with scope: :shortlink, url: shortlinks_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :short_url %><br>
    link.me/<%= form.text_field :short_url, placeholder: "custom_url" %>
  </div>

  <div class="form-group">
    <%= form.label :long_url %><br>
    <%= form.text_field :long_url %>
  </div>

  <p>
    <%= form.submit 'Create', :class => 'button center' %>
  </p>
<% end %>

<%= link_to 'Back', shortlinks_path %>

</div>
